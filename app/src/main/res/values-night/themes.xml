<resources>

    <style name="Base.Theme.GestionMantenimientoSoftware" parent="Theme.Material3.DayNight.NoActionBar"></style>

    <style name="Theme.GestionMantenimientoSoftware" parent="Base.Theme.GestionMantenimientoSoftware">
        <item name="android:statusBarColor">@color/carbon</item>
        <item name="colorPrimary">@color/orange_principal</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTextInputLayout">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconTint">@color/soft_gray</item>
        <item name="startIconTint">@color/orange_principal</item>
        <item name="hintTextColor">@color/orange_principal</item>
        <item name="boxStrokeColor">@color/orange_principal</item>
    </style>

    <style name="BackgroundBlack">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="BackgroundCarbon">
        <item name="android:backgroundTint">@color/carbon</item>
        <item name="android:background">@color/carbon</item>
    </style>

    <style name="BackgroundGrey">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="StyleTextView15">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleTextView20">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="StyleCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:background">@color/grey</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleButtonHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>