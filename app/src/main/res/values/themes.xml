<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GestionMantenimientoSoftware" parent="Theme.Material3.DayNight.NoActionBar"></style>

    <!-- Base application theme. -->
    <style name="Theme.GestionMantenimientoSoftware" parent="Base.Theme.GestionMantenimientoSoftware">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_principal</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/soft_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_principal</item>
        <item name="colorSecondaryVariant">@color/orange_principal</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="backgroundTint">@color/orange_principal</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTextInputLayout">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconTint">@color/soft_gray</item>
        <item name="startIconTint">@color/orange_principal</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BackgroundCarbon">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleTextView15">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleTextView20">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/gray_info</item>
    </style>

    <style name="StyleCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:backgroundTint">@color/gray_info</item>
        <item name="android:background">@color/gray_info</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="StyleButtonHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/orange_principal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>